{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "images": {
    "sizes": [256, 640, 1024],
    "formats": ["image/webp", "image/avif"],
    "minimumCacheTTL": 60
  },
  "env": {
    "NODE_ENV": "production"
  }
}
